@startuml

skinparam classAttributeIconSize 0

abstract class Event {
  -sendNotification : bool
  -date : Date
  -start : Time
  -end : Time
  -title : string
  -description : string
  +enableSendNotification() : void
  +disableSendNotification() : void
  +toggleSendNotification() : void
  +delete() : void
}

class ScheduledEvent {
  -users : List<user>
}

class Appointment {
  -assignent  : Assignent
}

Event <|-- ScheduledEvent
Event <|-- Appointment

Hour o-- Event : > has 1..*

@enduml
