'''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''''
class Reminder {
    -isDismissed : bool
    -hasDisplayed : bool
    -event : Event
    -triggerTime : Time
    -triggerDate : Date
    -message : string
    -type : ReminderType
    -snoozeDuration : int
    +hasDisplayed() : bool
    +enableDisplayed() : void
    +disableDisplayed() : void
    +isReadyToDisplay() : bool
    +isSnoozed() : bool
    +snooze(int) : void
    +isDismissed(): bool
    +dismiss(): void
    +hasTriggerDateTimePassed() : bool
}

enum ReminderType {
    Email
    DesktopNotification
    MobileNotification
    Text
}

